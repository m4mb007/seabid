<!-- Sign In Page Container -->
<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-cyan-50">
  <div class="flex min-h-screen">
    <!-- Left Section - Sign In Form -->
    <div class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
      <div class="w-full max-w-md">
        <!-- Logo/Brand Section -->
        <div class="text-center mb-8">
          <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Welcome back</h2>
          <p class="mt-2 text-sm text-gray-600">
            Don't have an account?
            <%= link_to "Create one here", new_registration_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
          </p>
        </div>

        <!-- Sign In Form -->
        <div class="bg-white py-8 px-8 shadow-xl rounded-2xl">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
            <div>
              <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.email_field :email, autocomplete: "email", 
                    class: "block w-full appearance-none rounded-lg border border-gray-300 px-3 py-3 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 text-sm" %>
              </div>
            </div>

            <div>
              <div class="flex items-center justify-between">
                <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
                <%= link_to "Forgot password?", new_password_path(resource_name), 
                    class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
              </div>
              <div class="mt-1">
                <%= f.password_field :password, autocomplete: "current-password",
                    class: "block w-full appearance-none rounded-lg border border-gray-300 px-3 py-3 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 text-sm" %>
              </div>
            </div>

            <div class="flex items-center">
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
                <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
              </div>
            </div>

            <div>
              <%= f.submit "Sign in", 
                  class: "flex w-full justify-center rounded-lg bg-gradient-to-r from-indigo-600 to-blue-600 px-3 py-3.5 text-sm font-semibold leading-6 text-white shadow-sm hover:from-indigo-700 hover:to-blue-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all duration-200" %>
            </div>
          <% end %>

          <% if devise_mapping.omniauthable? %>
            <div class="mt-6">
              <div class="relative">
                <div class="absolute inset-0 flex items-center">
                  <div class="w-full border-t border-gray-300"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                  <span class="bg-white px-2 text-gray-500">Or continue with</span>
                </div>
              </div>

              <div class="mt-6 grid grid-cols-2 gap-3">
                <% resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to omniauth_authorize_path(resource_name, provider), 
                      class: "flex w-full items-center justify-center gap-3 rounded-lg bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
                    <% case provider 
                       when :google_oauth2 %>
                      <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
                      </svg>
                      <span>Google</span>
                    <% when :facebook %>
                      <svg class="h-5 w-5 text-[#1877F2]" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                      <span>Facebook</span>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right Section - Image/Illustration -->
    <div class="hidden lg:block relative flex-1 bg-gradient-to-br from-indigo-600 to-blue-600">
      <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
      <div class="relative h-full flex flex-col items-center justify-center text-white px-12">
        <div class="max-w-lg">
          <h2 class="text-3xl font-bold mb-6">Find Your Perfect PELAUT Plate</h2>
          <p class="text-lg text-indigo-100 mb-8">Join thousands of satisfied customers who found their dream PELAUT plates through our secure bidding platform.</p>
          <div class="grid grid-cols-2 gap-6 text-center">
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
              <div class="text-3xl font-bold mb-2">1000+</div>
              <div class="text-indigo-100">Premium Plates</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
              <div class="text-3xl font-bold mb-2">5000+</div>
              <div class="text-indigo-100">Happy Customers</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 