<div class="space-y-10">
  <div class="mx-auto max-w-7xl">
    <div class="px-4 sm:px-0">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Payment Details #<%= @payment.id %></h2>
      <p class="mt-1 text-sm leading-6 text-gray-600">Detailed information about this payment.</p>
    </div>

    <div class="mt-6 border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">Status</dt>
          <dd class="mt-1 text-sm leading-6 sm:col-span-2 sm:mt-0">
            <span class="inline-flex items-center rounded-md px-2 py-1 text-sm font-medium
              <%= case @payment.status
                  when 'completed' then 'bg-green-50 text-green-700'
                  when 'processing' then 'bg-blue-50 text-blue-700'
                  when 'failed' then 'bg-red-50 text-red-700'
                  else 'bg-gray-50 text-gray-700'
                  end %>">
              <%= @payment.status.titleize %>
            </span>
          </dd>
        </div>

        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">Amount</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            RM <%= number_with_precision(@payment.amount, precision: 2) %>
          </dd>
        </div>

        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">User</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <%= @payment.user.email %>
          </dd>
        </div>

        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">Plate Number</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <%= @payment.plate_number.number %>
          </dd>
        </div>

        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">Created At</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <%= @payment.created_at.strftime("%B %d, %Y %H:%M:%S") %>
          </dd>
        </div>

        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">Updated At</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <%= @payment.updated_at.strftime("%B %d, %Y %H:%M:%S") %>
          </dd>
        </div>
      </dl>
    </div>

    <div class="mt-6 flex items-center justify-start gap-x-6">
      <%= link_to "Back to Payments", admin_payments_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>
</div> 