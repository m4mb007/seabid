<% content_for :title, "Dashboard" %>

<div class="min-h-screen bg-gray-100">
  <!-- Main content -->
  <div class="lg:pl-64 flex flex-col">
    <!-- Top navbar -->
    <div class="sticky top-0 z-10 flex-shrink-0 flex h-16 bg-white shadow">
      <div class="flex-1 px-4 flex justify-between">
        <div class="flex-1 flex items-center">
          <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
        </div>
        <div class="ml-4 flex items-center md:ml-6">
          <div class="relative">
            <%= link_to new_admin_plate_number_path, class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" do %>
              <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
              </svg>
              New Plate Number
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <main class="flex-1">
      <div class="py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Quick stats -->
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
            <!-- Total Users -->
            <div class="overflow-hidden rounded-lg bg-white shadow">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                    </svg>
                  </div>
                  <div class="ml-5 w-0 flex-1">
                    <dl>
                      <dt class="truncate text-sm font-medium text-gray-500">Total Users</dt>
                      <dd class="text-2xl font-semibold text-gray-900"><%= @total_users %></dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>

            <!-- Total Plate Numbers -->
            <div class="overflow-hidden rounded-lg bg-white shadow">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                    </svg>
                  </div>
                  <div class="ml-5 w-0 flex-1">
                    <dl>
                      <dt class="truncate text-sm font-medium text-gray-500">Total Plate Numbers</dt>
                      <dd class="text-2xl font-semibold text-gray-900"><%= @total_plate_numbers %></dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>

            <!-- Total Bids -->
            <div class="overflow-hidden rounded-lg bg-white shadow">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" />
                    </svg>
                  </div>
                  <div class="ml-5 w-0 flex-1">
                    <dl>
                      <dt class="truncate text-sm font-medium text-gray-500">Total Bids</dt>
                      <dd class="text-2xl font-semibold text-gray-900"><%= @total_bids %></dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>

            <!-- Total Payments -->
            <div class="overflow-hidden rounded-lg bg-white shadow">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" />
                    </svg>
                  </div>
                  <div class="ml-5 w-0 flex-1">
                    <dl>
                      <dt class="truncate text-sm font-medium text-gray-500">Total Payments</dt>
                      <dd class="text-2xl font-semibold text-gray-900"><%= @total_payments %></dd>
                    </dl>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Activity section -->
          <div class="mt-8">
            <h2 class="text-lg font-medium text-gray-900">Recent Activity</h2>
            
            <div class="mt-4 grid grid-cols-1 gap-5 lg:grid-cols-2">
              <!-- Recent Users Panel -->
              <div class="bg-white shadow sm:rounded-lg">
                <div class="px-4 py-5 sm:p-6">
                  <h3 class="text-base font-semibold leading-6 text-gray-900">Recent Users</h3>
                  <div class="mt-5 flow-root">
                    <ul role="list" class="-my-5 divide-y divide-gray-200">
                      <% @recent_users.each do |user| %>
                        <li class="py-4">
                          <div class="flex items-center space-x-4">
                            <div class="flex-shrink-0">
                              <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-gray-500">
                                <span class="text-sm font-medium leading-none text-white"><%= user.email.first.upcase %></span>
                              </span>
                            </div>
                            <div class="min-w-0 flex-1">
                              <p class="truncate text-sm font-medium text-gray-900"><%= user.email %></p>
                              <p class="truncate text-sm text-gray-500">
                                Joined <%= time_ago_in_words(user.created_at) %> ago
                                <% if user.bidding_fee_paid? %>
                                  <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800 ml-2">Fee Paid</span>
                                <% else %>
                                  <span class="inline-flex items-center rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800 ml-2">No Fee</span>
                                <% end %>
                              </p>
                            </div>
                            <div>
                              <%= link_to "View", admin_user_path(user), class: "inline-flex items-center rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
                            </div>
                          </div>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                  <div class="mt-6">
                    <%= link_to "View all users", admin_users_path, class: "flex w-full items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
                  </div>
                </div>
              </div>

              <!-- Recent Payments Panel -->
              <div class="bg-white shadow sm:rounded-lg">
                <div class="px-4 py-5 sm:p-6">
                  <h3 class="text-base font-semibold leading-6 text-gray-900">Recent Payments</h3>
                  <div class="mt-5 flow-root">
                    <ul role="list" class="-my-5 divide-y divide-gray-200">
                      <% @recent_payments.each do |payment| %>
                        <li class="py-4">
                          <div class="flex items-center space-x-4">
                            <div class="flex-shrink-0">
                              <% case payment.status %>
                              <% when 'completed' %>
                                <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-green-100">
                                  <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                  </svg>
                                </span>
                              <% when 'processing' %>
                                <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-blue-100">
                                  <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                  </svg>
                                </span>
                              <% when 'failed' %>
                                <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-red-100">
                                  <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                  </svg>
                                </span>
                              <% else %>
                                <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-gray-100">
                                  <svg class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                  </svg>
                                </span>
                              <% end %>
                            </div>
                            <div class="min-w-0 flex-1">
                              <p class="text-sm font-medium text-gray-900">
                                RM <%= number_with_delimiter(payment.amount) %> - <%= payment.plate_number.number %>
                              </p>
                              <p class="text-sm text-gray-500">
                                by <%= payment.user.email %> • <%= time_ago_in_words(payment.created_at) %> ago
                              </p>
                            </div>
                            <div>
                              <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium
                                <%= case payment.status
                                  when 'completed' then 'bg-green-50 text-green-700 ring-1 ring-inset ring-green-600/20'
                                  when 'processing' then 'bg-blue-50 text-blue-700 ring-1 ring-inset ring-blue-600/20'
                                  when 'failed' then 'bg-red-50 text-red-700 ring-1 ring-inset ring-red-600/20'
                                  else 'bg-gray-50 text-gray-700 ring-1 ring-inset ring-gray-600/20'
                                  end %>">
                                <%= payment.status.titleize %>
                              </span>
                            </div>
                          </div>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                  <div class="mt-6">
                    <%= link_to "View all payments", admin_payments_path, class: "flex w-full items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Recent Plate Numbers -->
            <div class="mt-5 bg-white shadow sm:rounded-lg">
              <div class="px-4 py-5 sm:p-6">
                <div class="sm:flex sm:items-center">
                  <div class="sm:flex-auto">
                    <h3 class="text-base font-semibold leading-6 text-gray-900">Recent Plate Numbers</h3>
                    <p class="mt-1 text-sm text-gray-500">Latest plate numbers added to the system</p>
                  </div>
                  <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
                    <%= link_to "Add Plate", new_admin_plate_number_path, class: "block rounded-md bg-blue-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
                  </div>
                </div>
                <div class="mt-6 flow-root">
                  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                      <table class="min-w-full divide-y divide-gray-300">
                        <thead>
                          <tr>
                            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Number</th>
                            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Category</th>
                            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Type</th>
                            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Price</th>
                            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                              <span class="sr-only">Edit</span>
                            </th>
                          </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                          <% @recent_plate_numbers.each do |plate| %>
                            <tr>
                              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= plate.number %></td>
                              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= plate.category.titleize %></td>
                              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                <span class="<%= plate.sale_type == 'auction' ? 'text-purple-600' : 'text-blue-600' %>">
                                  <%= plate.sale_type.titleize %>
                                </span>
                              </td>
                              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">RM <%= number_with_delimiter(plate.current_price) %></td>
                              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                                <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium
                                  <%= case plate.status
                                    when 'available' then 'bg-green-50 text-green-700 ring-1 ring-inset ring-green-600/20'
                                    when 'booked' then 'bg-yellow-50 text-yellow-700 ring-1 ring-inset ring-yellow-600/20'
                                    when 'paid' then 'bg-blue-50 text-blue-700 ring-1 ring-inset ring-blue-600/20'
                                    else 'bg-gray-50 text-gray-700 ring-1 ring-inset ring-gray-600/20'
                                    end %>">
                                  <%= plate.status.titleize %>
                                </span>
                              </td>
                              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                                <%= link_to "Edit", edit_admin_plate_number_path(plate), class: "text-blue-600 hover:text-blue-900 mr-2" %>
                                <%= link_to "View", admin_plate_number_path(plate), class: "text-blue-600 hover:text-blue-900" %>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div> 