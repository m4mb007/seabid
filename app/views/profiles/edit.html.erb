<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-900">Edit Profile</h1>
      <%= link_to "Change Password", edit_password_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
    </div>

    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-700">
            Phone number and IC (NRIC) cannot be changed after registration.
          </p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with(model: @user, url: profile_path, method: :patch, local: true) do |f| %>
          <% if @user.errors.any? %>
            <div class="mb-4 p-4 bg-red-50 rounded-md">
              <h2 class="text-red-800 text-sm font-medium"><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>
              <ul class="mt-2 text-red-700 text-sm">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="space-y-6">
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
              <div>
                <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.text_field :first_name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3" %>
                </div>
              </div>

              <div>
                <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.text_field :last_name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3" %>
                </div>
              </div>
            </div>

            <div>
              <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.email_field :email, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3" %>
              </div>
            </div>

            <div>
              <%= f.label :ic_number, "IC Number", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 relative">
                <%= f.text_field :ic_number, disabled: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3 bg-gray-50 pr-10" %>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                  <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <p class="mt-1 text-xs text-gray-500">This field cannot be edited after registration</p>
              </div>
            </div>

            <div>
              <%= f.label :seafarer_id, "Seafarer ID", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 relative">
                <%= f.text_field :seafarer_id, disabled: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3 bg-gray-50 pr-10" %>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                  <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <p class="mt-1 text-xs text-gray-500">This field cannot be edited after registration</p>
              </div>
            </div>

            <% if @user.agent? %>
              <div>
                <%= f.label :company_registration_number, "Company Registration Number", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1 relative">
                  <%= f.text_field :company_registration_number, disabled: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3 bg-gray-50 pr-10" %>
                  <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <p class="mt-1 text-xs text-gray-500">This field cannot be edited after registration</p>
                </div>
              </div>
            <% end %>

            <div>
              <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 relative">
                <%= f.text_field :phone_number, disabled: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3 bg-gray-50 pr-10" %>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                  <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <p class="mt-1 text-xs text-gray-500">This field cannot be edited after registration</p>
              </div>
            </div>

            <div class="border-t border-gray-200 pt-6  ">
              <h3 class="text-lg font-medium text-gray-900 mb-4 mt-6">Address Information</h3>
              
              <div class="space-y-4">
                <div>
                  <%= f.label :street, "Street Address", class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= f.text_field :street, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3" %>
                  </div>
                </div>

                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 mt-6">
                  <div>
                    <%= f.label :postcode, "Postal Code", class: "block text-sm font-medium text-gray-700" %>
                    <div class="mt-1">
                      <%= f.text_field :postcode, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3" %>
                    </div>
                  </div>

                  <div>
                    <%= f.label :state, class: "block text-sm font-medium text-gray-700" %>
                    <div class="mt-1">
                      <%= f.select :state, 
                        [
                          ['Johor', 'Johor'],
                          ['Kedah', 'Kedah'],
                          ['Kelantan', 'Kelantan'],
                          ['Melaka', 'Melaka'],
                          ['Negeri Sembilan', 'Negeri Sembilan'],
                          ['Pahang', 'Pahang'],
                          ['Perak', 'Perak'],
                          ['Perlis', 'Perlis'],
                          ['Pulau Pinang', 'Pulau Pinang'],
                          ['Sabah', 'Sabah'],
                          ['Sarawak', 'Sarawak'],
                          ['Selangor', 'Selangor'],
                          ['Terengganu', 'Terengganu'],
                          ['Wilayah Persekutuan Kuala Lumpur', 'Wilayah Persekutuan Kuala Lumpur'],
                          ['Wilayah Persekutuan Labuan', 'Wilayah Persekutuan Labuan'],
                          ['Wilayah Persekutuan Putrajaya', 'Wilayah Persekutuan Putrajaya']
                        ],
                        { include_blank: 'Select a state' },
                        class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3"
                      %>
                    </div>
                  </div>
                </div>

                <div class="mt-6">
                  <%= f.label :country, class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= f.text_field :country, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-base border-gray-300 rounded-md py-2 px-3" %>
                  </div>
                </div>
              </div>
            </div>

            <div class="flex justify-end">
              <%= f.submit "Update Profile", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 