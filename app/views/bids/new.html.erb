<div class="bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
    <div class="mx-auto max-w-2xl">
      <h1 class="text-2xl font-bold tracking-tight text-gray-900">Increase Your Bid</h1>
      <p class="mt-2 text-sm text-gray-600">Plate Number: <%= @plate_number.number %></p>

      <div class="mt-8">
        <div class="space-y-12">
          <div class="border-b border-gray-900/10 pb-12">
            <%= form_with(model: [@plate_number, @bid], local: true, class: "mt-6") do |f| %>
              <div class="sm:flex-auto">
                <div class="mt-2">
                  <%= f.label :amount, "Bid Amount (RM)", class: "block text-sm font-medium leading-6 text-gray-900" %>
                  <div class="relative mt-2 rounded-md shadow-sm">
                    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                      <span class="text-gray-500 sm:text-sm">RM</span>
                    </div>
                    <%= f.number_field :amount, min: @current_price + 1, step: "0.01", class: "block w-full rounded-md border-0 py-1.5 pl-12 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6", placeholder: "0.00" %>
                  </div>
                  <p class="mt-2 text-sm text-gray-500">Current price: RM <%= number_with_delimiter(@current_price) %></p>
                  <p class="mt-1 text-sm text-gray-500">Minimum bid: RM <%= number_with_delimiter(@current_price + 1) %></p>
                </div>
              </div>

              <div class="mt-6 flex items-center justify-end gap-x-6">
                <%= link_to "Cancel", my_bids_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
                <%= f.submit "Place Bid", class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 