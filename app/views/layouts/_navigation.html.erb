<header class="bg-white shadow-sm">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo & Navigation in 1 flex group -->
      <div class="flex items-center space-x-8">
        <!-- Logo -->
        <%= link_to root_path, class: "flex items-center", data: { turbo: true } do %>
          <span class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-blue-500 bg-clip-text text-transparent">SeaBid</span>
        <% end %>

        <!-- Main Navigation -->
        <nav class="hidden md:flex space-x-6">
          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <%= link_to "Admin Dashboard", admin_root_path, class: "rounded-md px-3 py-2 text-sm font-medium #{current_page?(admin_root_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
            <% else %>
              <%= link_to "Home", root_path, class: "rounded-md px-3 py-2 text-sm font-medium #{current_page?(root_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
              <%= link_to "Plates", plate_numbers_path, class: "rounded-md px-3 py-2 text-sm font-medium #{current_page?(plate_numbers_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
              <%= link_to "Dashboard", dashboard_path, class: "rounded-md px-3 py-2 text-sm font-medium #{current_page?(dashboard_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
            <% end %>
          <% end %>
        </nav>
      </div>

      <!-- User Menu -->
      <div class="flex items-center gap-4">
        <% if user_signed_in? %>
          <!-- Verification Status Badge -->
          <%= render "shared/verification_status", user: current_user %>
          
          <div class="relative" x-data="{ open: false }" @click.away="open = false">
            <button type="button" @click="open = !open" class="flex items-center space-x-2 rounded-md px-3 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50">
              <span>Selamat pagi, <%= current_user.first_name %></span>
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
            
            <div x-show="open" 
                 x-transition:enter="transition ease-out duration-100"
                 x-transition:enter-start="transform opacity-0 scale-95"
                 x-transition:enter-end="transform opacity-100 scale-100"
                 x-transition:leave="transition ease-in duration-75"
                 x-transition:leave-start="transform opacity-100 scale-100"
                 x-transition:leave-end="transform opacity-0 scale-95"
                 class="absolute right-0 z-10 mt-2 w-48 rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
                 style="display: none;">
              <%= link_to "Edit Profile", edit_profile_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", data: { turbo: true } %>
              <% unless current_user.otp_verified? %>
                <%= link_to "Verify Account", new_otp_verification_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", data: { turbo: true } %>
              <% end %>
              <%= button_to destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", form: { data: { turbo: true } } do %>
                Logout
              <% end %>
            </div>
          </div>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "text-sm px-3 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-500", data: { turbo: true } %>
          <%= link_to "Sign Up", new_user_registration_path, class: "text-sm px-3 py-2 border border-gray-300 rounded-md hover:bg-gray-100", data: { turbo: true } %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation Menu -->
  <div class="block md:hidden border-t border-gray-200">
    <nav class="flex overflow-x-auto py-3 px-4">
      <%= link_to "Home", root_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(root_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
      
      <% if user_signed_in? %>
        <%= link_to "Plates", plate_numbers_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(plate_numbers_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
        
        <% if current_user.admin? %>
          <%= link_to "Admin Dashboard", admin_root_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(admin_root_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
          <%= link_to "Users", admin_users_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(admin_users_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
          <%= link_to "Settings", admin_settings_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(admin_settings_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
        <% else %>
          <%= link_to "Dashboard", dashboard_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(dashboard_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
          <%= link_to "Bids", my_bids_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(my_bids_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
          <%= link_to "Payments", my_payments_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(my_payments_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
          <%= link_to "Profile", edit_profile_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(edit_profile_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
          <% unless current_user.otp_verified? %>
            <%= link_to "Verify Account", new_otp_verification_path, class: "whitespace-nowrap px-3 py-2 text-sm font-medium rounded-md #{current_page?(new_otp_verification_path) ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:bg-gray-50'}", data: { turbo: true } %>
          <% end %>
        <% end %>
      <% end %>
    </nav>
  </div>
</header>

